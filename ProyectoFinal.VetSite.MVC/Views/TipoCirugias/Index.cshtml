@model IEnumerable<ProyectoFinal.Entidades.TipoCirugia>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>@ViewBag.Title</h1>
        <a href="/TipoCirugias/Crear" class="btn btn-success">
            <i class="fas fa-plus me-2"></i>Agregar un tipo de cirugía
        </a>
    </div>

    <table id="tipoCirugiasTabla" class="table">
        <thead>
            <tr>
                <th>Descripción</th>
                <th>Usuario creación</th>
                <th>Fecha creación</th>
                <th>Usuario modificación</th>
                <th>Fecha modificación</th>                
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @if (Model == null || !Model.Any())
            {
                <tr>
                    <td colspan="5" class="text-center">No hay tipos de cirugías registradas.</td>
                </tr>
            }
            else
            {
                @foreach (var tipoCirugia in Model)
                {
                    <tr>
                        <td>@tipoCirugia.Descripcion</td>
                        <td>@tipoCirugia.UsuarioCreacion!.Nombre</td>
                        <td>@tipoCirugia.FechaCreacion.ToShortDateString()</td>
                        <td>@tipoCirugia.UsuarioModificacion!.Nombre</td>
                        <td>@tipoCirugia.FechaModificacion.ToShortDateString()</td>                        
                        <td class="text-center">
                            <form asp-action="Editar" method="get" class="d-inline">
                                <input type="hidden" name="id" value="@tipoCirugia.TipoCirugiaId" />
                                <button type="submit" class="btn btn-primary me-2">
                                    <i class="fas fa-edit"></i>
                                </button>
                            </form>
                            <form asp-action="Eliminar" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@tipoCirugia.TipoCirugiaId" />
                                <button type="submit" class="btn btn-danger" onclick="return confirm('¿Está seguro de que desea eliminar este tipo de cirugía?');">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>


@section Scripts {

    <!-- DataTables JS para Bootstrap 5 -->
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#tipoCirugiasTabla').DataTable({
                language: {
                    search: "Buscar:",
                    lengthMenu: "Mostrar _MENU_ registros por página",
                    zeroRecords: "No se encontraron registros",
                    info: "Mostrando página _PAGE_ de _PAGES_",
                    infoEmpty: "No hay registros disponibles",
                    infoFiltered: "(filtrado de _MAX_ registros totales)",
                    paginate: {
                        previous: "<",
                        next: ">"
                    }
                }
            });
        });
    </script>
}
