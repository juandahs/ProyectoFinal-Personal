@model IEnumerable<ProyectoFinal.Entidades.Propietario>


<head>
    <link rel="stylesheet" href="~/css/users.css" asp-append-version="true" />

</head>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>@ViewBag.Title</h1>
        <a href="/Propietarios/Crear" class="btn btn-success">
            <i class="fas fa-plus me-2"></i>Agregar Propietario
        </a>
    </div>

    <table id="propietariosTable" class="table">
        <thead>
            <tr>
                <th>Identificación</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Teléfono</th>
                <th>Correo electrónico</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @if (Model == null || !Model.Any())
            {
                <tr>
                    <td colspan="5" class="text-center">No hay propietarios registrados.</td>
                </tr>
            }
            else
            {
                @foreach (var propietario in Model)
                {
                    <tr>
                        <td>@propietario.NumeroIdentificacion</td>
                        <td>@propietario.Nombre</td>
                        <td>@propietario.Apellido</td>
                        <td>@propietario.Telefono</td>
                        <td>@propietario.CorreoElectronico</td>
                        <td class="text-center">
                            <form asp-action="Editar" method="get" class="d-inline">
                                <input type="hidden" name="id" value="@propietario.PropietarioId" />
                                <button type="submit" class="btn btn-primary me-2">
                                    <i class="fas fa-edit"></i> Editar
                                </button>
                            </form>
                            <form asp-action="Eliminar" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@propietario.PropietarioId" />
                                <button type="submit" class="btn btn-danger" onclick="return confirm('¿Está seguro de que desea eliminar este propietario?');">
                                    <i class="fas fa-trash"></i> Eliminar
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

@section Scripts {
    
    <!-- DataTables JS para Bootstrap 5 -->
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
    <script>
              $(document).ready(function () {
            $('#propietariosTable').DataTable({
                language: {
                    search: "Buscar:",
                    lengthMenu: "Mostrar _MENU_ registros por página",
                    zeroRecords: "No se encontraron registros",
                    info: "Mostrando página _PAGE_ de _PAGES_",
                    infoEmpty: "No hay registros disponibles",
                    infoFiltered: "(filtrado de _MAX_ registros totales)",
                    paginate: {
                        previous: "<",
                        next: ">"
                    }
                }
            });
        });

    </script>
}
