@using ProyectoFinal.Entidades
@model ProyectoFinal.Entidades.TipoExamen

<head>
    <link rel="stylesheet" href="~/css/users.css" asp-append-version="true" />
</head>

<div class="row">

    <!-- Campo oculto para el UsuarioId -->
    @if (Model != null)
    {
        <input type="hidden" asp-for="UsuarioCreacionId" />
        <input type="hidden" asp-for="FechaCreacion" />
    }


    <!-- Descripcion -->
    <div class="col-md-6 mb-3">
        <label asp-for="Descripcion" class="form-label">Descripcion*</label>
        <input asp-for="Descripcion" class="form-control" required />
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>


    <!-- Botón de Guardar -->
    <div class="mb-3">
        <button type="submit" class="btn btn-success">Guardar</button>
        <a href="@Url.Action("Index", "TipoExamenes")" class="btn btn-secondary">Cancelar</a>
    </div>

</div>

