@model ProyectoFinal.VetSite.MVC.Models.EnvioCorreoModel


<form asp-action="EnviarEmail" method="post">
    <div class="form-group">
        <label for="Asunto">Asunto</label>
        <input type="text" class="form-control" asp-for="Asunto" required>
    </div>

    <div class="form-group">
        <label for="Mensaje">Mensaje</label>
        <textarea class="form-control" asp-for="Mensaje" rows="5" required></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Enviar</button>
</form>
