<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VetSite</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div id="nav-container" class="container-fluid d-flex align-items-center justify-content-between">
                <!-- Contenedor izquierdo: menú hamburguesa y título -->
                <div class="d-flex align-items-center">
                    <!-- Botón para abrir el sidebar -->
                    <button id="menu-button" class="menu-button" onclick="toggleSidebar()">☰</button>
                    <!-- Nombre de la aplicación -->
                    <a id="app-title" class="navbar-brand ms-2" asp-area="" asp-page="/Index">VetSite</a>
                </div>
                <!-- Contenedor derecho: botón de cerrar sesión -->
                <form asp-controller="Login" asp-action="Logout" method="post">
                    <button class="logout-button" type="submit">
                        <i class="fas fa-sign-out-alt"></i>
                        <span>Salir</span>
                    </button>
                </form>
            </div>
        </nav>
    </header>

    <!-- Sidebar -->
    <div id="sidebar" class="sidebar">
        <a href="/Usuarios">Usuarios</a>
        <a href="/Appointments/List">Citas</a>
    </div>

    <!-- Contenido principal -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <partial name="_Footer"></partial>

    <script>
        // Mostrar y ocultar el sidebar
        function toggleSidebar() {
            const sidebar = document.getElementById("sidebar");
            const navContainer = document.getElementById("nav-container");
            sidebar.classList.toggle("open-sidebar");

            if (sidebar.classList.contains("open-sidebar")) {
                navContainer.style.marginLeft = "250px"; // Desplaza el contenedor principal
            } else {
                navContainer.style.marginLeft = "0"; // Restaura el margen
            }
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-cz5V6Woylh9g8oNjWNBk1BcFO9A9Cj8wvA5y3Ik1aAoJbvnT4RD4WEZ4h/8dPWzP" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
