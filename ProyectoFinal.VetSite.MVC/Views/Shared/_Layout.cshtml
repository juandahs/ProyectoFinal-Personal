<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VetSite</title>
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
    <style>
        /* Sidebar styles */
        .sidebar {
            height: 100%;
            width: 250px;
            position: fixed;
            top: 0;
            left: -250px;
            background-color: #333;
            color: white;
            overflow-x: hidden;
            transition: 0.3s;
            padding-top: 60px;
        }

            .sidebar a {
                padding: 10px 15px;
                text-decoration: none;
                font-size: 18px;
                color: white;
                display: block;
                transition: 0.3s;
            }

                .sidebar a:hover {
                    background-color: #575757;
                }

            .sidebar.open-sidebar {
                left: 0;
            }

        /* Menu button styles */
        .menu-button {
            font-size: 24px;
            cursor: pointer;
            background: none;
            border: none;
            color: #333;
            position: absolute;
            left: 15px;
            top: 15px;
            z-index: 1000;
        }

            .menu-button.open-sidebar {
                left: 260px;
            }

        .navbar-brand {
            margin-left: 60px;
        }

        /* Logout button styles */
        .logout-button {
            background-color: transparent;
            border: none;
            font-size: 20px;
            color: #333;
            display: flex;
            align-items: center;
            gap: 5px;
            cursor: pointer;
        }

            .logout-button:hover {
                color: #007bff;
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container d-flex align-items-center">
                <!-- Sidebar toggle button -->
                <button class="menu-button me-2" onclick="toggleSidebar()">☰</button>
                <!-- App name -->
                <a class="navbar-brand" asp-area="" asp-page="/Index">VetSite</a>
                <!-- Logout button -->
                <form asp-controller="Login" asp-action="Logout" method="post" class="ms-auto">
                    <button class="logout-button" type="submit">
                        <i class="fas fa-sign-out-alt"></i>
                        <span>Salir</span>
                    </button>
                </form>

            </div>
        </nav>
    </header>

    <!-- Sidebar -->
    <div id="sidebar" class="sidebar">
        <a href="/Usuarios"><i class="fas fa-users"></i> Usuarios</a>
        <a href="/Appointments/List"><i class="fas fa-calendar-alt"></i> Citas</a>
    </div>

    <!-- Main content -->
    <div class="container" style="margin-left: 250px;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <partial name="_Footer"></partial>

    <!-- Scripts -->
    <script>
        // Toggle sidebar visibility
        function toggleSidebar() {
            const sidebar = document.getElementById("sidebar");
            const menuButton = document.querySelector(".menu-button");
            sidebar.classList.toggle("open-sidebar");
            menuButton.classList.toggle("open-sidebar");
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-cj2AK+JYkuDkqj4a5g1qmbitPGzY6f0tbSWnyBheTxD1CGAe7GzAGpknxM9HJsoh" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
