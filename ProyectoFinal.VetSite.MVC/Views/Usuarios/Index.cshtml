@model List<ProyectoFinal.Entidades.Usuario>

<title>@ViewBag.Title - VetSite</title>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>@ViewBag.Title</h1>
        <a href="/Usuarios/Create" class="btn btn-success">
            <i class="fas fa-plus me-2"></i>Agregar Usuario
        </a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Teléfono</th>
                <th>Correo electronico</th>
                <th>Tarjeta profesional</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="4" class="text-center">No hay usuarios registrados.</td>
                </tr>
            }
            else
            {
                @foreach (var usuario in Model)
                {
                    <tr>
                        <td>@usuario.Nombre @usuario.Apellido</td>
                        <td>@usuario.Telefono</td>
                        <td>@usuario.CorreoElectronico</td>
                        <td>@usuario.TarjetaProfesional</td>
                        <td class="text-center">                         
                            <a href="/Usuarios/Edit/@usuario.UsuarioID" class="btn btn-primary me-2">
                                <i class="fas fa-edit"></i> Editar
                            </a>
                            <a href="/Usuarios/Delete/@usuario.UsuarioID" class="btn btn-danger" onclick="return confirm('¿Está seguro de que desea eliminar este usuario?');">
                                <i class="fas fa-trash"></i> Eliminar
                            </a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
