<!-- Fondo oscuro para opacar -->
<div id="modalOverlay" class="modal-overlay"></div>

<div class="modal fade" id="cambiarClaveModal" tabindex="-1" aria-labelledby="cambiarClaveModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="cambiarClaveModalLabel">Cambiar clave</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="cambiarClaveForm" asp-action="CambiarClave" method="post">
                    <input type="hidden" id="usuarioIdModal" name="usuarioId" />

                    <div class="mb-3">
                        <label for="claveActual" class="form-label">Clave actual</label>
                        <input type="password" name="claveActual" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label for="nuevaClave" class="form-label">Nueva clave</label>
                        <input type="password" name="nuevaClave" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label for="nuevaClaveConfirmar" class="form-label">Confirma la nueva clave</label>
                        <input type="password" name="nuevaClaveConfirmar" class="form-control" required />
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                        <button type="submit" class="btn btn-primary">Guardar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
