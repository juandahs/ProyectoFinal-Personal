@page
@model ProyectoFinal.Entidades.Usuario

<div>
    <label for="TipoIdentificacionID">Tipo de Identificación:</label>
    <select id="TipoIdentificacionID" name="Usuario.TipoIdentificacionID" required>
        <!-- Aquí debes poblar las opciones desde el modelo o vista -->
        <option value="">Selecciona un tipo</option>
        <option value="1">Cédula</option>
        <option value="2">Pasaporte</option>
    </select>
</div>

<div>
    <label for="NumeroIdentificacion">Número de Identificación:</label>
    <input type="text" id="NumeroIdentificacion" name="Usuario.NumeroIdentificacion" value="@Model.NumeroIdentificacion" required />
</div>

<div>
    <label for="Nombre">Nombre:</label>
    <input type="text" id="Nombre" name="Usuario.Nombre" value="@Model.Nombre" required />
</div>

<div>
    <label for="Apellido">Apellido:</label>
    <input type="text" id="Apellido" name="Usuario.Apellido" value="@Model.Apellido" required />
</div>

<div>
    <label for="Telefono">Teléfono:</label>
    <input type="tel" id="Telefono" name="Usuario.Telefono" value="@Model.Telefono" required />
</div>

<div>
    <label for="CorreoElectronico">Correo Electrónico:</label>
    <input type="email" id="CorreoElectronico" name="Usuario.CorreoElectronico" value="@Model.CorreoElectronico" required />
</div>

<div>
    <label for="TarjetaProfesional">Tarjeta Profesional:</label>
    <input type="text" id="TarjetaProfesional" name="Usuario.TarjetaProfesional" value="@Model.TarjetaProfesional" />
</div>

<div>
    <label for="Clave">Clave:</label>
    <input type="password" id="Clave" name="Usuario.Clave" value="@Model.Clave" required />
</div>