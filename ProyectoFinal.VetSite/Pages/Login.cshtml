@page
@model ProyectoFinal.VetSite.Pages.LoginModel
@{
    Layout = null;
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />

<div class="container">
    <div class="alert alert-danger text-center" asp-validation-summary="ModelOnly" role="alert">
        <!-- Mensaje de error aquí -->
    </div>

    <div class="d-flex justify-content-center align-items-center flex-grow-1">
        <div class="card shadow-lg">
            <div class="card-body p-5">
                <div class="text-center mb-4">
                    <h3 class="fw-bold" style="color: #00aaff;">Vet-Site</h3>
                </div>

                <form method="post">
                    <div class="mb-3">
                        <label asp-for="Credenciales.Nombre" class="form-label">Username</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light">
                                <i class="bi bi-person-fill"></i>
                            </span>
                            <input type="text" class="form-control" asp-for="Credenciales.Nombre" placeholder="Enter your username">
                        </div>
                        <span class="text-danger" asp-validation-for="Credenciales.Nombre"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Credenciales.Clave" class="form-label">Password</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light">
                                <i class="bi bi-lock-fill"></i>
                            </span>
                            <input type="password" class="form-control" asp-for="Credenciales.Clave" placeholder="Enter your password">
                        </div>
                        <span class="text-danger" asp-validation-for="Credenciales.Clave"></span>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary btn-lg btn-block" style="background-color: #00aaff; border: none;">Sign in</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <partial name="_Footer"></partial>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
